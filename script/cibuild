#!/usr/bin/env sh
#
# Run code style linters and tests on the continuous integration server.
#
# NOTE: the script does not rely on Docker.
#
# Examples
#
#   script/cibuild
set -o errexit

cd "$(dirname "$0")/.."

echo "==> Checking the code styleâ€¦"
rubocop --display-cop-names \
        --display-style-guide \
        --extra-details \
        --fail-fast \
        --config=.rubocop.yml

echo "==> Starting testsâ€¦"
bin/rails test test

